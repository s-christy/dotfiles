#change the i3 status bar in i3config to use this

echo '{ "version": 1 }'
echo '['
echo '[]'
while :;
do

	until="$(ut 16:00)"
	if [[ $until == -* ]]; then
		untilcolor=#ff0000
		#echo test2
	else
		untilcolor=#00ff00
		#echo test1
	fi

	echo ",[\
	{\"name\":\"until\",	\"color\":\"$untilcolor\",	\"full_text\":\"$until\"},\
	{\"name\":\"ESSID\",	\"color\":\"#ffffff\",		\"full_text\":\"$(ESSIDBAR)\"},\
	{\"name\":\"space\",	\"color\":\"#ffffff\",		\"full_text\":\"$(diskSpaceBAR)\"},\
	{\"name\":\"volume\",	\"color\":\"#ffffff\",		\"full_text\":\"$(volumeBAR)\"},\
	{\"name\":\"time\",	\"color\":\"#ffffff\",		\"full_text\":\"$(date)\"}\
	]"


	sleep .1
done

